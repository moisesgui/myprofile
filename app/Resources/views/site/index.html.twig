{% extends 'base.html.twig' %}
{% trans_default_domain 'MyProfile' %}

{% block stylesheets %}
  {{ encore_entry_link_tags('web_site') }}
{% endblock %}

{% block body %}

<!-- Navigation -->
<div id="page-top">
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
  <div class="container">
    <a class="navbar-brand js-scroll-trigger navbar-brand-component" href="#page-top">My profile</a>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      Menu
      <i class="fa fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="#last_sings">{{ 'default.last_registrations' | trans }}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link js-scroll-trigger" href="{{ path('fos_user_security_login') }}">{{ 'security.login.submit'|trans({}, 'FOSUserBundle')}}</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-globe fa-lg"></i> {{ app.request.locale }}
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="{{ path('app_homepage', {'_locale': 'pt_BR'}) }}">pt_BR</a>
            <a class="dropdown-item" href="{{ path('app_homepage', {'_locale': 'en'}) }}">en</a>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<header class="masthead">
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-lg-7 my-auto">
        <div class="header-content mx-auto">
          <h1 class="mb-5">{{ 'site.title_message' | trans }}</h1>
          <a href="{{ path('fos_user_registration_register') }}" class="btn btn-outline btn-xl js-scroll-trigger">{{ 'navegation.registration' | trans }}</a>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="cta" id="last_sings">
  <div class="container cta-content">
    <h1 class="text-white">{{ 'default.last_registrations' | trans }}</h1>
    <div class="row">
        {% for user in users %}
          <div class="col mt-2">
            <a href="{{ path('app_profile', {'username': user.username}) }}">
              <img src="{{ app_gravatar.getAvatar(user.email, 80, 'wavatar') }}" class="rounded-circle" title="{{ user.getFirstName() }} {{ user.getLastName() }}" />
            </a>
          </div>

        {% endfor %}
    </div>

  </div>
  <div class="overlay"></div>
</section>

<footer>
  <div class="container">
    <p>&copy; 2017 - {{ "now" | date('Y') }} My profile. All Rights Reserved.</p>
    <ul class="list-inline">
      <li class="list-inline-item">
        <a href="mailto:contato@myprofile.pro">
          <i class="fa fa-envelope fa-2x"></i>
        </a>
      </li>
      <li class="list-inline-item">
        <a href="https://github.com/eerison/myprofile" target="_blank">
          <i class="icon-github fa-2x"></i>
        </a>
      </li>
      <li class="list-inline-item">
        <a href="https://www.jetbrains.com" target="_blank">
          <span class="icon-jetbrains fa-2x"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span><span class="path8"></span><span class="path9"></span><span class="path10"></span><span class="path11"></span><span class="path12"></span><span class="path13"></span><span class="path14"></span><span class="path15"></span><span class="path16"></span></span>
        </a>
      </li>
      <li class="list-inline-item">
        <a href="https://sentry.io" target="_blank">
          <i class="icon-sentry fa-2x"></i>
        </a>
      </li>
    </ul>
  </div>
</footer>

{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('web_site') }}
{% endblock %}